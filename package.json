{
  "name": "sls-template",
  "version": "0.0.1",
  "description": "Serverless Template",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage",
    "build:test": "yarn build && yarn test",
    "lint": "eslint . --ext js,ts --cache --fix",
    "prettier": "prettier --list-different './**/*.{js,ts}' --write",
    "deploy": "sls deploy --verbose",
    "offline": "sls offline --verbose"
  },
  "author": "prism-it-services",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/aws-lambda": "^8.10.140",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "axios": "^1.7.2",
    "esbuild": "^0.23.0",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "serverless": "^4.1.11",
    "serverless-esbuild": "^1.52.1",
    "serverless-offline": "^13.6.0",
    "serverless-prune-plugin": "^2.0.2",
    "ts-jest": "^29.1.5",
    "ts-loader": "^9.5.1",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@middy/core": "^5.4.5",
    "@prism-it-services/helper-utils": "^0.0.3",
    "jsonpath": "^1.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build:test && yarn lint"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix"
  }
}
